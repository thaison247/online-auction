<div class="container">
    <div class="row">
        <div class="col-md-3 ">
            <div class="list-group ">
                <a href="/account/profile" class="list-group-item list-group-item-action active">Thông tin cá nhân</a>
                <a href="/account/changePassword" class="list-group-item list-group-item-action">Đổi mật khẩu</a>
                <a href="/account/reviews" class="list-group-item list-group-item-action">Điểm &amp; Đánh giá</a>
                <a href="/account/upgrade" class="list-group-item list-group-item-action">Nâng cấp tài khoản</a>
                <a href="/account/myProducts" class="list-group-item list-group-item-action">Sản phẩm của tôi</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Thông Tin Cá Nhân</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form>
                                <div class="form-group row">
                                    <label for="username" class="col-4 col-form-label">Họ Tên</label>
                                    <div class="col-8">
                                        <input id="username" name="username" value="{{user.ho_ten}}" readonly
                                            class="form-control here" required="required" type="text">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="name" class="col-4 col-form-label">Số điện thoại</label>
                                    <div class="col-8">
                                        <input id="name" name="name" value="{{user.sdt}}" class="form-control here"
                                            type="text" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastname" class="col-4 col-form-label">Địa chỉ</label>
                                    <div class="col-8">
                                        <input id="lastname" name="lastname" value="{{user.dia_chi}}"
                                            class="form-control here" type="text" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="select" class="col-4 col-form-label">Phân hệ người dùng</label>
                                    <div class="col-8">
                                        <select id="select" name="select" class="custom-select">
                                            <option value="admin" readonly>{{phan_he}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-4 col-form-label">Email</label>
                                    <div class="col-8">
                                        <input id="email" name="email" value="{{user.email}}" class="form-control here"
                                            type="text" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="website" class="col-4 col-form-label">Số điểm</label>
                                    <div class="col-8">
                                        <input id="website" name="website" value="{{user.so_diem}}"
                                            class="form-control here" type="text" readonly>
                                    </div>
                                </div>
                            </form>
                            <div class="form-group row">
                                <div class="offset-4 col-8">
                                    <a href="/account/changeInfo"><button class="btn btn-primary">Cập Nhật Thông
                                            Tin</button></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>