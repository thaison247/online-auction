<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3">

            <div class="list-group ">
                <a href="/admin/requests" class="list-group-item list-group-item-action ">Yêu cầu nâng cấp</a>
                <a href="/admin/users" class="list-group-item list-group-item-action">Danh sách người dùng</a>
                <a href="/admin/categories" class="list-group-item list-group-item-action active">Quản lí danh mục</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow">
                <h4 class="card-header">
                    Danh mục
                </h4>

                {{#if this.empty}}
                <div class="card-body">
                    <p class="card-text">
                        Không có dữ liệu.
                    </p>
                </div>
                {{else}}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">#</th>
                            <th scope="col">Tên Danh Mục</th>
                            <th class="text-right" scope="col"><a href="/admin/categories/add"><button
                                        class="btn btn-success">Thêm Danh
                                        Mục</button></a></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.categories}}
                        <tr>
                            <th scope="row" class="text-center">{{id_dm}}</th>
                            <td>{{ten_dm}}</td>
                            <td class="text-right">

                                <form action="/admin/categories/delete" method="POST">
                                    <a name="" id="" class="btn btn-sm btn-primary"
                                        href="/admin/categories/edit/{{id_dm}}" role="button">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <input type="hidden" name="id_dm" value="{{id_dm}}">
                                    <button class="btn btn-sm btn-danger" type="submit">

                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>

                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}

            </div>
        </div>
    </div>
</div>