<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-3">

      <div class="list-group ">
        <a href="/admin/requests" class="list-group-item list-group-item-action ">Yêu cầu nâng cấp</a>
        <a href="/admin/users" class="list-group-item list-group-item-action">Danh sách người dùng</a>
        <a href="/admin/categories" class="list-group-item list-group-item-action active">Quản lí danh mục</a>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card shadow mb-4">
        <h4 class="card-header">
          Danh Mục
        </h4>
        <div class="card-body">
          <form method="POST">
            <div class="form-group">
              <label for="txtCatId">#</label>
              <input type="text" class="form-control" id="txtCatId" name="id_dm" readonly
                value="{{this.danhmuc.id_dm}}">
            </div>
            <div class="form-group">
              <label for="txtCatName">Tên Danh Mục</label>
              <input type="text" class="form-control" id="txtCatName" name="ten_dm"
                placeholder="Đổi tên khác cho danh mục" autofocus value="{{this.danhmuc.ten_dm}}">
            </div>
            <a class="btn btn-outline-primary" href="/admin/categories" role="button">
              <i class="fa fa-backward" aria-hidden="true"></i>
              Quay về danh sách
            </a>
            <button type="submit" class="btn btn-outline-success" formaction="/admin/categories/patch">
              <i class="fa fa-check" aria-hidden="true"></i>
              Lưu thay đổi
            </button>
            <button type="submit" class="btn btn-outline-danger" formaction="/admin/categories/delete">
              <i class="fa fa-trash" aria-hidden="true"></i>
              Xoá danh mục
            </button>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>