<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3 ">
            <div class="list-group ">
                <a href="/admin/requests" class="list-group-item list-group-item-action active">Yêu cầu nâng cấp</a>
                <a href="/admin/users" class="list-group-item list-group-item-action">Danh sách người dùng</a>
                <a href="/admin/categories" class="list-group-item list-group-item-action">Quản lí danh mục</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>{{title}}</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Tên</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Điểm</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each requests}}
                                <tr>
                                    <th scope="row">{{ho_ten}}</th>
                                    <td>{{email}}</td>
                                    <td>{{so_diem}}</td>
                                    <td>
                                        <form action="/admin/requests/accept/{{id_req}}/{{nguoi_gui}}" method="POST">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary"><i
                                                        class="fa fa-user-check"></i>Đồng Ý</button>
                                            </div>

                                        </form>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>