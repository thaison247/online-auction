<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Tên</th>
            <th scope="col">Email</th>
            <th scope="col">Điểm</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each requests}}
        <tr>
            <th scope="row">{{ho_ten}}</th>
            <td>{{email}}</td>
            <td>{{so_diem}}</td>
            <td>
                <form action="/admin/requests/accept/{{id_req}}/{{nguoi_gui}}" method="POST">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-user-check"></i>Đồng Ý</button>
                    </div>

                </form>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>