<!-- Single Product -->
<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/main_thumb.jpg">
                        <img src="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/main_thumb.jpg" alt="">
                    </li>
                    <li data-image="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/1_thumb.jpg">
                        <img src="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/1_thumb.jpg" alt="">
                    </li>
                    <li data-image="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/2_thumb.jpg">
                        <img src="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/2_thumb.jpg" alt="">
                    </li>
                    <li data-image="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/3_thumb.jpg">
                        <img src="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/3_thumb.jpg" alt="">
                    </li>
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected"><img src="/imgs/sp/{{this.proInfo.id_dm}}/{{this.proInfo.id_sp}}/main.jpg"
                        alt=""></div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">{{this.catName.ten_dm}}</div>
                    <div class="product_name ">{{this.proInfo.ten_sp}}</div>
                    <div class="product_price" style="margin-top: 30px;">
                        <i class="fas fa-money-bill-alt" style="color:blue;"></i> Giá Hiện Tại:
                        {{#if this.currentPrice}}
                        <span>{{format this.currentPrice}} đ</span>
                        {{else}}
                        <span>{{format this.proInfo.gia_khoi_diem}} đ</span>
                        {{/if}}
                    </div>
                    {{#if this.proInfo.gia_mua_ngay}}
                    <div class="product_price">
                        <i class="fas fa-cart-plus" style="color:#28A745;"></i> Giá Mua Ngay:
                        <span style="color:#28A745;">{{format this.proInfo.gia_mua_ngay}} đ</span>
                    </div>
                    {{/if}}
                    <div class="mt-3"> Người bán: <span style="color: blue;">{{this.seller}} (94 điểm)</span>
                    </div>
                    {{#if this.highestBidder}}
                    <div> Người đặt giá cao nhất hiện tại: <span style="color: blue;">{{this.highestBidder}} (89
                            điểm)</span></div>
                    {{/if}}
                    <div class="mt-3">Thời điểm đăng: <span
                            style="color: blue;">{{moment this.proInfo.tg_dang "dddd, MMMM Do YYYY, h:mm a"}}</span>
                    </div>
                    <div class="mb-3">Thời điểm kết thúc: <span style="color: blue;">3 ngày nữa</span></div>

                    <a href="#">Xem lịch sử đấu giá</a>
                    {{!-- <div class="product_text">
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas fermentum. laoreet turpis,
                            nec sollicitudin dolor cursus at. Maecenas aliquet, dolor a faucibus efficitur, nisi tellus
                            cursus urna, eget dictum lacus turpis.</p>
                    </div> --}}
                    <div class="mt-5">
                        <input class="form-control" style="width: 150px; float: left; text-align: center;" type="number"
                            step="{{proInfo.buoc_gia}}" min="{{rcmPrice}}" value="{{rcmPrice}}"
                            onKeyDown="return false">
                        <a class="btn btn-outline-primary" href="#" role="button">
                            <i class="fa fa-money-bill-alt" aria-hidden="true"></i>
                            Đấu Giá
                        </a>
                        {{#if this.proInfo.gia_mua_ngay}}
                        <a class="btn btn-outline-success" href="#" role="button">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            Mua Ngay
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
